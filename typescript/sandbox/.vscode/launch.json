  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",

      // to use a generated folder
      // "program": "${workspaceFolder}/generated/main.js",
      // "cwd": "${workspaceFolder}",
      // "outFiles": [
      //   "${workspaceFolder}/generated/**/*.js"
      // ],

      // to generate .js and .js.map along the .ts
      "program": "${workspaceFolder}/src/main.js",
      "cwd": "${workspaceFolder}",
      "outFiles": [
       "${workspaceFolder}/src/**/*.js"
      ],

      "sourceMaps": true, // true by default
      "console": "internalConsole"
    }
  ]
}